<div class="container-fluid">
    <form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="Image" />
        <input type="hidden" asp-for="UploadImage" />



        <div class="mb-3">
            <label>İlanın Başlığı:</label>
            <input type="text" class="form-control" asp-for="@Model.ProductName" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Aktif</label>
            <input type="checkbox" asp-for="@Model.Status" class="form-check-input" />
        </div>
        <div class="mb-3">
            <label>Birim başına miktar</label>
            <textarea asp-for="@Model.Quantity" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label>Birim Fiyat</label>
            <textarea asp-for="@Model.UnitPrice" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label>Stok</label>
            <textarea asp-for="@Model.UnitInStock" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-check-label">İndirim</label>
            <input type="checkbox" asp-for="@Model.Discontinued" class="form-check-input" />
        </div>

        <div class="form-group mb-3">
            <label class="control-label"></label>
            <img src="~/media/products/@Model.Image" style="object-fit: contain; max-width: 200px; max-height: 150px;" />
            <input type="file" asp-for="@Model.UploadImage" class="form-control" />
            <span asp-validation-for="@Model.UploadImage" class="text-danger"></span>
        </div>

