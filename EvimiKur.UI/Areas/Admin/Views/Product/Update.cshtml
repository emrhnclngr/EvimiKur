@model ProductUpdateDto
@{
    ViewData["Title"] = "Update";
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
<meta name="description" content="" />
<meta name="author" content="" />
<title>One Page Wonder - Start Bootstrap Template</title>
<link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
<!-- Font Awesome icons (free version)-->
<script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
<!-- Google fonts-->
<link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
<!-- Core theme CSS (includes Bootstrap)-->
<link href="~/css/create/css/styles.css" rel="stylesheet" />



<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="~/css/create/js/scripts.js"></script>


<div class="container-fluid">
    <form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="Image" />
        <div class="mb-3">
            <label>İlanın Başlığı:</label>
            <input type="text" class="form-control" asp-for="@Model.ProductName" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Aktif</label>
            <input type="checkbox" asp-for="@Model.Status" class="form-check-input" />
        </div>
        <div class="mb-3">
            <label>Birim başına miktar</label>
            <textarea asp-for="@Model.Quantity" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label>Birim Fiyat</label>
            <textarea asp-for="@Model.UnitPrice" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label>Stok</label>
            <textarea asp-for="@Model.UnitInStock" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-check-label">İndirim</label>
            <input type="checkbox" asp-for="@Model.Discontinued" class="form-check-input" />
        </div>

        <div class="form-group mb-3">
            <label class="control-label"></label>
            <img src="~/media/products/@Model.Image" style="object-fit: contain; max-width: 200px; max-height: 150px;" />
            <input type="file" asp-for="@Model.UploadImage" class="form-control" />
            <span asp-validation-for="@Model.UploadImage" class="text-danger"></span>
        </div>

       
        <div class="mb-3">

            <select class="form-select" asp-items="@ViewBag.Categories" asp-for="@Model.CategoryId">
                <option value="0">
                    Bir kategori seçiniz
                </option>
            </select>
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@ViewBag.Dealers" asp-for="@Model.DealerId">
                <option value="0">
                    Choose A Dealer
                </option>
            </select>
        </div>

        <div class="mb-3">
            <button class="btn btn-primary">Save</button>
            <button asp-controller="Home" asp-action="Index" class="btn btn-primary">Back To List</button>
        </div>
        <div asp-validation-summary="All" class="text-danger text-center">
        </div>
    </form>
</div>