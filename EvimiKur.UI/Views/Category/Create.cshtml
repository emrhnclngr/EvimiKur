@model CategoryCreateDto
@{
    Layout = "_Layout";
}


<div class="container-fluid">
    <form asp-action="Create" asp-controller="Category" method="post">
        <div class="mb-3">
            <label> Kategori Adı:</label>
            <input type="text" class="form-control" asp-for="@Model.Name" />
        </div>
        <div class="mb-3">
            <label>Kategori Açıklaması:</label>
            <input type="text" class="form-control" asp-for="@Model.Description" />
        </div>
        <div class="mb-3">
            <label class="form-check-label">Aktif</label>
            <input type="checkbox" asp-for="@Model.Status" class="form-check-input" />
        </div>
        
        <div class="mb-3">
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>